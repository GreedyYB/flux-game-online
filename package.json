{
  "name": "flux-game-react",
  "version": "1.0.0",
  "description": "Flux strategic board game built with React and Node.js",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "start": "node server/index.js",
    "build": "npm run install-client && cd client && npm run build",
    "postinstall": "npm run install-client",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "vercel-build": "npm run install-client && npm run build"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "22.x",
    "npm": "9.x"
  },
  "keywords": [
    "flux",
    "board-game",
    "react",
    "nodejs",
    "socket.io"
  ],
  "author": "",
  "license": "MIT"
}
